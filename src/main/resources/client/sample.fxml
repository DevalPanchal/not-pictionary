<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ColorPicker?>
<GridPane fx:controller="client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
        <Label text="Words go here"></Label>
    </VBox>
    <GridPane  GridPane.rowIndex="1" GridPane.columnIndex="0" vgap="15" hgap="15">
        <VBox GridPane.rowIndex="1"  GridPane.columnIndex="0" style="-fx-border-color: black; -fx-border-width: 1;">
            <Canvas fx:id="mainCanvas" width="800" height="600"></Canvas>
        </VBox>

        <ListView fx:id="chatMenu" GridPane.rowIndex="1" GridPane.columnIndex="1"></ListView>

        <TextField fx:id="chatInput" text="" promptText="Enter Guess..." GridPane.rowIndex="2" GridPane.columnIndex="1"></TextField>

        <ColorPicker fx:id="colorPicker" GridPane.rowIndex="2" GridPane.columnIndex="0"></ColorPicker>
    </GridPane>



</GridPane>